{
    "compilerOptions": {
        "module": "system",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "out": "out/build.js",
        "strict": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2015.promise",
            "es5"
        ],
        "target": "es5"
    },
    "include": [
        "src/**/*.ts"
    ]
}