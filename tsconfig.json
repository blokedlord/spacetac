{
    "compilerOptions": {
        "module": "system",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outFile": "out/build.js",
        "strict": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es6",
            "scripthost"
        ],
        "target": "es6"
    },
    "include": [
        "src/**/*.ts"
    ]
}