{
    "version": "0.1.0",
    "command": ".venv/node/bin/npm",
    "isShellCommand": true,
    "args": [
        "run",
        "--silent"
    ],
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "isTestCommand": false,
            "showOutput": "never",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "test",
            "isBuildCommand": false,
            "isTestCommand": true,
            "showOutput": "always",
            "problemMatcher": "$tsc"
        }
    ]
}